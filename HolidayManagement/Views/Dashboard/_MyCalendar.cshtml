@{
    ViewBag.Title = "MyCalendar";
}

<h2>My Calendar</h2>

<button type="button" class="btn btn-primary btn-xs" data-toggle="month" data-bind="click: prevMonth">Previous</button>

<span data-bind="text: monthName() +' '+year()"></span>

<button type="button" class="btn btn-primary btn-xs" data-toggle="month" data-bind="click: nextMonth">Next</button>


<button type="button" class="btn btn-primary btn-sm bottom-right" data-toggle="modal" data-target="#holiday">Add new Holiday</button>
<div class="modal fade" id="holiday" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
           
            <div class="modal-body">
                <form>

                   <p>
                       <select data-bind="options: users,
                       optionsText: 'fullName',
                       optionsValue:'id',
                       value: 'selectedUserID',
                       optionsCaption: 'Choose User'" class="form-control"></select>
                    </p>
                    <div class="form-group">
                        <label for="fromDate">From date:</label>
                        <input type="date" class="form-control" id="fromDate">
                    </div>
                    <div class="form-group">
                        <label for="endDate">To date:</label>
                        <input type="date" class="form-control" id="toDate">
                    </div>         

                  <button type="button" class="btn btn-primary">Add</button>

                  
                </form>
            </div>
          
        </div>
    </div>
</div>


<table>
    <tbody data-bind="foreach: calendar">
        <tr>
            <td>
                <div class="day" data-bind="css: {'freeday': isFreeDay}">
                    <span data-bind="text: day"></span> - 
                    <span data-bind="text: name"></span>
                  
                    @*<div data-bind="foreach:vacation">
                        <span data-bind="text startDate"></span>

                    </div>*@
                </div>
            </td>
        </tr>
    </tbody>
</table>
